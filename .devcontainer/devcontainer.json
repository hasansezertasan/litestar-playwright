{
  "name": "litestar-playwright",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.ruff": "explicit",
          "source.organizeImports.ruff": "explicit"
        }
      }
    }
  },
  "forwardPorts": [
    8000,
    3000
  ],
  "portsAttributes": {
    "8000": {
      "label": "Litestar app"
    }
  },
  "postCreateCommand": "uv sync --all-groups && uv run playwright install --with-deps chromium",
  "containerEnv": {
    "UV_LINK_MODE": "copy",
    "PLAYWRIGHT_BROWSERS_PATH": "/ms-playwright"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
    "source=litestar-playwright-uv-cache,target=/home/vscode/.cache/uv,type=volume"
  ]
}
